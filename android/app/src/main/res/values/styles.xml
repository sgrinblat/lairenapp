<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base de la app, Material3, sin ActionBar -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Barras del sistema transparentes para edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
        <!-- Evitar contraste forzado en barra de navegación (Android 10+) -->
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <!-- Igual que AppTheme, la dejo por compatibilidad si la usabas por nombre -->
    <style name="AppTheme.NoActionBar" parent="AppTheme" />

    <!-- Splash (Android 12+). El postSplashScreenTheme vuelve a AppTheme -->
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <!-- Cambiá colores/ícono a gusto -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

</resources>
